<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardElevation="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="10dp">

           <TextView
               android:text="Exposicion"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/detalle_exposicion"
               android:textSize="18sp"
               android:textColor="#33b5e5"
               android:textStyle="normal|bold" />

            <TextView
             android:text="Las Calles de salta a traves del tiempo "
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/detalle_titulo"
             android:fontFamily="sans-serif"
             android:typeface="sans"
             android:textSize="40sp"
             android:gravity="center"
             android:textAllCaps="false"
             android:textStyle="normal|bold" />


            <TextView
               android:text="Fotografias de las principales calles y avenidas de nuestra ciudad en distintas epocas, permitiendo a los visitantes conocer la historia y evolucion de la ciudad de salta
               "
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/detalle_descripcion"
               android:textSize="16sp" />

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_below="@+id/titulo"
               android:layout_margin="10dp"
               android:layout_height="wrap_content"
               android:id="@+id/fecha"
               android:layout_centerHorizontal="true">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   >

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/ic_calendario"
                       android:id="@+id/imageView2"
                       android:layout_weight="1" />

                   <TextView
                       android:text="  fecha   "
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/textView4"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#33b5e5"
                       android:textStyle="normal|bold" />
               </LinearLayout>


               <TextView
                   android:text="jueves 23 de marzo inicia 12:00 finaliza 13:00 "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/detalle_fecha"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:gravity="center_vertical"
                   android:textSize="16sp" />
           </LinearLayout>
           <LinearLayout
               android:background="@android:color/darker_gray"
               android:layout_margin="3dp"
               android:id="@+id/lineaHorizontal"
               android:layout_height="2dp"
               android:orientation="horizontal"
               android:layout_width="match_parent">
           </LinearLayout>


           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_margin="10dp"
               android:layout_height="wrap_content"
               android:id="@+id/organizar"
               android:layout_centerHorizontal="true">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/ic_organiza"
                       android:id="@+id/icon_organiza" />

                   <TextView
                       android:text="organiza"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/text_organiza"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#33b5e5"
                       android:textStyle="normal|bold" />
               </LinearLayout>


               <TextView
                   android:text="Juan Perez,Organizacion de los estfdddddddddddddddddddddvcvxvdfdsssssssssdddddddddddddddddddados nacionales "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:id="@+id/detalle_organiza"
                   android:gravity="center_vertical"
                   android:textSize="16sp" />
           </LinearLayout>
           <LinearLayout
               android:background="@android:color/darker_gray"
               android:layout_margin="3dp"
               android:id="@+id/lineaHorizontal3"
               android:layout_height="2dp"
               android:orientation="horizontal"
               android:layout_width="match_parent">
           </LinearLayout>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_margin="10dp"
               android:layout_height="wrap_content"

               android:id="@+id/posicion"
               android:layout_centerHorizontal="true">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/ic_lugar"
                       android:id="@+id/icon_posicion"
                       android:layout_weight="1" />

                   <TextView
                       android:text="   lugar    "
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/text_posicion"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#33b5e5"
                       android:textStyle="normal|bold" />
               </LinearLayout>


               <TextView
                   android:text="Teatro de huerto ,san marti 2200 ghjghhhhhhhhhhhhhhhhhhhhhhhhhhhhhhgggggggggggggggggggggggggggggggfsalta Capital"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/detalle_lugar"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:gravity="center_vertical"
                   android:textSize="16sp" />
           </LinearLayout>
           <LinearLayout
               android:background="@android:color/darker_gray"
               android:layout_margin="3dp"
               android:id="@+id/lineaHorizontal2"
               android:layout_height="2dp"
               android:orientation="horizontal"
               android:layout_below="@+id/fecha"
               android:layout_width="match_parent">
           </LinearLayout>

       </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>