<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:id="@+id/titulo"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/reloj24"
                android:id="@+id/reloj"
                android:layout_margin="10dp"
                android:scaleType="center"
                android:layout_below="@id/titulo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_posicion"
                android:id="@+id/posicion"
                android:scaleType="center"
                android:layout_below="@id/reloj"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/localizacion"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/posicion"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/posicion"
                android:layout_alignBottom="@+id/posicion" />

            <TextView
                android:gravity="center_vertical"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fecha"
                android:layout_toRightOf="@id/reloj"
                android:layout_alignTop="@+id/reloj"
                android:layout_alignBottom="@id/reloj"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

</android.support.v7.widget.CardView>
